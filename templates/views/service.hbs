<!DOCTYPE html>
<html>
    <head lang="en">
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>{{displayService}}</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <div class="container">
            <div class="row bg-white form-container">
                <div class="col-12 align-self-center">
                    <form id="service-form">
                        <div class="text-center">
                            <h1 id="service-heading">{{displayService}}</h1>
                        </div>
                        {{#each serviceDetails}}
                            <div class="form-group row justify-content-center">
                                <label for="{{this}}" class="col-md-2 col-form-label">{{this}}</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="{{this}}" id="{{this}}" required>
                                </div>
                            </div>
                        {{/each}}
                        <div class="form-group row justify-content-center">
                            <div class="col-md-12 text-center">
                                <button class="btn btn-secondary" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script src="/js/jquery.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </body>
</html>